<div class="tb">

<p id="notice"><%= notice %></p>

<h2 align="center">Lista de Negócios</h2>
<h2><%= link_to 'Novo negócio', new_negocio_path %></h2>

<table border="10" bgcolor=lightgray>
  <thead>
    <tr>
      <th>Produto</th>
      <th>Tipo</th>
      <th>Quantidade</th>
      <th>Codigo</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negocios.each do |negocio| %>
      <tr>
        
        <td><%= if(negocio.produto.blank? == true)
        print ""
        else
        negocio.produto.name
        end
        %></td>
        
        <td><%= negocio.tipo %></td>
        <td><%= negocio.quantidade %></td>
        <td><%= negocio.codigo %></td>
        <td><%= negocio.data %></td>
        <td><%= link_to 'Exibir', negocio %></td>
        <td><%= link_to 'Editar', edit_negocio_path(negocio) %></td>
        <td><%= link_to 'Excluir', negocio, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>